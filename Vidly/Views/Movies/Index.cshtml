@model List<Vidly.Models.Movie>


<h1>Movies</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><a href="Movies/Details/@movie.ID">@movie.Name</a></td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <text>We don't have any movies yet</text>
}
